/**cart.wxss**/
page {
  min-height: 100vh;
  background: #f6f8fc;
  font-family: "Noto Sans SC", "PingFang SC", "Microsoft YaHei", sans-serif;
  color: #1f2a37;
}

.cart-edit {
  font-size: 12px;
  color: #2c6cff;
}

.cart-page {
  padding: 12px 12px 80px;
}

.cart-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.cart-item {
  background: #ffffff;
  border-radius: 16px;
  padding: 12px;
  display: flex;
  gap: 12px;
  box-shadow: 0 12px 24px rgba(24, 44, 76, 0.08);
}

.cart-item-check {
  display: flex;
  align-items: flex-start;
  padding-top: 4px;
}

.check-circle {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  border: 2px solid #d7deea;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-circle.checked {
  background: #2c6cff;
  border-color: #2c6cff;
}

.check-circle.checked::after {
  content: "";
  width: 8px;
  height: 4px;
  border-left: 2px solid #ffffff;
  border-bottom: 2px solid #ffffff;
  transform: rotate(-45deg);
  margin-top: -1px;
}

.cart-item-image {
  width: 70px;
  height: 70px;
  border-radius: 12px;
}

.cart-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.cart-item-title {
  font-size: 13px;
  font-weight: 600;
  color: #1f2a37;
  line-height: 1.4;
}

.cart-item-spec {
  font-size: 11px;
  color: #8b99ab;
}

.cart-item-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 6px;
}

.cart-item-price {
  font-size: 15px;
  font-weight: 600;
  color: #ff6a3d;
}

.cart-qty {
  display: flex;
  align-items: center;
  gap: 6px;
  background: #f4f6fb;
  border-radius: 12px;
  padding: 4px 6px;
}

.qty-btn {
  width: 22px;
  height: 22px;
  border-radius: 8px;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4a586a;
  font-size: 14px;
  box-shadow: 0 2px 6px rgba(24, 44, 76, 0.08);
}

.qty-count {
  min-width: 18px;
  text-align: center;
  font-size: 12px;
  color: #1f2a37;
}

.cart-footer {
  position: fixed;
  left: 12px;
  right: 12px;
  bottom: 12px;
  background: #ffffff;
  border-radius: 16px;
  padding: 12px 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 16px 30px rgba(24, 44, 76, 0.12);
}

.footer-left {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 12px;
  color: #607089;
}

.footer-mid {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 2px;
}

.footer-label {
  font-size: 11px;
  color: #9aa7b8;
}

.footer-price {
  font-size: 16px;
  font-weight: 600;
  color: #ff6a3d;
}

.footer-btn {
  height: 36px;
  padding: 0 20px;
  background: #2c6cff;
  color: #ffffff;
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  font-weight: 600;
}
