page {
  min-height: 100vh;
  background: #f6f8fc;
  font-family: "Noto Sans SC", "PingFang SC", "Microsoft YaHei", sans-serif;
  color: #1f2a37;
}

.category-detail {
  padding: 12px 12px 20px;
}

.filter-bar {
  background: #ffffff;
  border-radius: 16px;
  padding: 16px 12px 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 6px;
  box-shadow: 0 16px 30px rgba(24, 44, 76, 0.12);
  margin-bottom: 12px;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  color: #6b7788;
}

.filter-item.active {
  color: #2c6cff;
  font-weight: 600;
}

.price-arrows {
  display: flex;
  flex-direction: column;
  line-height: 1;
}

.arrow {
  font-size: 9px;
  color: #c1c7d3;
  height: 8px;
}

.arrow.active {
  color: #2c6cff;
}

.goods-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.goods-card {
  display: flex;
  gap: 12px;
  background: #ffffff;
  border-radius: 16px;
  padding: 12px;
  box-shadow: 0 12px 24px rgba(24, 44, 76, 0.08);
}

.goods-image {
  width: 110px;
  height: 110px;
  border-radius: 12px;
  flex-shrink: 0;
}

.goods-info {
  display: flex;
  flex-direction: column;
  gap: 6px;
  flex: 1;
}

.goods-name {
  font-size: 14px;
  font-weight: 600;
  line-height: 1.4;
}

.goods-tags {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.goods-tag {
  font-size: 10px;
  color: #5b6a7f;
  background: #f2f5fb;
  padding: 3px 6px;
  border-radius: 8px;
}

.goods-meta {
  display: flex;
  align-items: baseline;
  gap: 6px;
}

.goods-price {
  font-size: 16px;
  font-weight: 600;
  color: #ff6a3d;
}

.goods-unit {
  font-size: 10px;
  color: #9aa7b8;
}

.goods-extra {
  display: flex;
  justify-content: space-between;
  font-size: 11px;
  color: #8b99ab;
}

.brand-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 20;
}

.brand-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-radius: 18px 18px 0 0;
  padding: 16px;
  z-index: 30;
}

.brand-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 12px;
}

.brand-close {
  font-size: 20px;
  color: #9aa7b8;
}

.brand-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  padding-bottom: 12px;
}

.brand-chip {
  padding: 6px 12px;
  border-radius: 14px;
  font-size: 12px;
  background: #f2f5fb;
  color: #5b6a7f;
}

.brand-chip.active {
  background: #2c6cff;
  color: #ffffff;
}

.brand-footer {
  display: flex;
  gap: 10px;
}

.brand-reset,
.brand-confirm {
  flex: 1;
  height: 36px;
  border-radius: 18px;
  font-size: 12px;
  font-weight: 600;
  line-height: 36px;
}

.brand-reset {
  background: #f2f5fb;
  color: #5b6a7f;
}

.brand-confirm {
  background: #2c6cff;
  color: #ffffff;
}
