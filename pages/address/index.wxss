.page {
  min-height: 100vh;
  background: #f6f8fc;
  padding: 16px 16px 96px;
  color: #1f2a37;
  box-sizing: border-box;
}

.title {
  font-size: 13px;
  font-weight: 600;
  color: #5f6b7a;
  margin: 6px 0 10px;
}

.list {
  background: #ffffff;
  border-radius: 12px;
  padding: 6px 12px;
  box-shadow: 0 10px 20px rgba(24, 44, 76, 0.08);
}

.address-item {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 12px 0;
  border-bottom: 1px solid #eef2f6;
}

.address-item:last-child {
  border-bottom: none;
}

.avatar {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: #e6f7ff;
  color: #16a3c7;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 600;
}

.info {
  flex: 1;
}

.top-row {
  display: flex;
  align-items: center;
  gap: 6px;
  margin-bottom: 4px;
}

.name {
  font-size: 13px;
  font-weight: 600;
  color: #1f2a37;
}

.phone {
  font-size: 12px;
  color: #1f2a37;
}

.tag {
  font-size: 10px;
  color: #2c6cff;
  border: 1px solid #8db4ff;
  border-radius: 6px;
  padding: 1px 4px;
}

.detail {
  font-size: 11px;
  color: #7a8699;
  line-height: 1.5;
}

.edit {
  font-size: 11px;
  color: #8b97a8;
  padding-top: 2px;
}

.empty {
  padding: 16px 0;
  text-align: center;
  font-size: 12px;
  color: #8b97a8;
}

.add-btn {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 24px;
  background: #0ab68a;
  color: #ffffff;
  text-align: center;
  border-radius: 20px;
  padding: 10px 0;
  font-size: 13px;
  box-shadow: 0 12px 20px rgba(6, 165, 126, 0.25);
}
