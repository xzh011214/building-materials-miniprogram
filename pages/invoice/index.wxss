.page {
  min-height: 100vh;
  background: #f6f8fc;
  padding: 16px;
  color: #1f2a37;
  box-sizing: border-box;
}

.title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
}

.card {
  background: #ffffff;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 10px 20px rgba(24, 44, 76, 0.08);
  font-size: 12px;
  color: #667085;
}

.row {
  margin-bottom: 12px;
}

.btn {
  background: #0ab68a;
  color: #ffffff;
  text-align: center;
  border-radius: 16px;
  padding: 8px 0;
  font-size: 12px;
}
