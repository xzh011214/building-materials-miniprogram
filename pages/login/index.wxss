.wechat-login {
     min-width: 75%;
     max-width: 75%;
    height: 90rpx;
    box-sizing: border-box;
    padding: 0;
    font-style:var(--td-checkbox-icon-checked-color);
    font-family: AlimamaFangYuanTiVF-Thin;
    font-weight: lighter;
    /* font-family:-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Hiragino Sans GB,Microsoft YaHei UI,Microsoft YaHei,Source Han Sans CN,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol; */
    border-radius: 40rpx;
    background: green;
    border: 3rpx solid #3d3d3d;
    text-align: center;
    line-height: 90rpx;
    color:#fff;
    letter-spacing: 5rpx;
    margin: 50rpx auto 0;
    font-size: 30rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); /* 阴影效果 */
    transition: all 0.3s ease; /* 动画过渡 */
    display: block;
}
    /* 鼠标悬停效果 */
    .wechat-login:hover {
      background: linear-gradient(135deg, #597e59, #3d5a3d);
      transform: scale(1.05); /* 放大效果 */
      box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.3); /* 更强的阴影效果 */
    }
  
    /* 按下效果 */
    .wechat-login:active {
      background: linear-gradient(135deg, #4d6a4d, #698e6d);
      transform: scale(0.95); /* 缩小效果 */
      box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 减弱的阴影效果 */
    }
  
.wechat-login:after {
    border: none;
}

