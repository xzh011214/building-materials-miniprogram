/* pages/goods-detail/goods-detail.wxss */
page {
	min-height: 100vh;
	background: #f6f8fc;
	font-family: "Noto Sans SC", "PingFang SC", "Microsoft YaHei", sans-serif;
	color: #1f2a37;
}

.detail-page {
	padding: 12px 12px 90px;
}

.hero-card {
	position: relative;
	background: #ffffff;
	border-radius: 18px;
	padding: 12px;
	box-shadow: 0 14px 26px rgba(24, 44, 76, 0.1);
}

.hero-image {
	width: 100%;
	height: 220px;
	border-radius: 14px;
}

.hero-badge {
	position: absolute;
	left: 24px;
	bottom: 24px;
	background: rgba(31, 42, 55, 0.75);
	color: #ffffff;
	font-size: 12px;
	padding: 4px 10px;
	border-radius: 12px;
}

.detail-card {
	background: #ffffff;
	border-radius: 16px;
	padding: 14px;
	margin-top: 12px;
	box-shadow: 0 12px 24px rgba(24, 44, 76, 0.08);
}

.detail-title {
	font-size: 16px;
	font-weight: 600;
	line-height: 1.4;
}

.detail-price-row {
	display: flex;
	align-items: baseline;
	gap: 10px;
	margin-top: 8px;
}

.detail-price {
	font-size: 20px;
	font-weight: 600;
	color: #ff6a3d;
}

.detail-origin {
	font-size: 12px;
	color: #9aa7b8;
	text-decoration: line-through;
}

.detail-tags {
	display: flex;
	gap: 8px;
	margin-top: 10px;
	flex-wrap: wrap;
}

.tag {
	background: #f2f5fb;
	color: #5b6a7f;
	font-size: 11px;
	padding: 4px 8px;
	border-radius: 10px;
}

.section-title {
	font-size: 14px;
	font-weight: 600;
	margin-bottom: 10px;
}

.param-row {
	display: flex;
	justify-content: space-between;
	padding: 6px 0;
	font-size: 12px;
	color: #6b7788;
	border-bottom: 1px solid #eef2f7;
}

.param-row:last-child {
	border-bottom: none;
}

.param-name {
	color: #8b99ab;
}

.param-value {
	color: #1f2a37;
}

.detail-footer {
	position: fixed;
	left: 12px;
	right: 12px;
	bottom: 12px;
	display: flex;
	gap: 12px;
}

.footer-action {
	flex: 1;
	height: 42px;
	border-radius: 22px;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 13px;
	font-weight: 600;
}

.footer-action.ghost {
	background: #ffffff;
	color: #2c6cff;
	border: 1px solid #d7deea;
}

.footer-action.primary {
	background: #2c6cff;
	color: #ffffff;
}