/* pages/goods-detail/goods-detail.wxss */
page {
	min-height: 100vh;
	background: #f6f8fc;
	font-family: "Noto Sans SC", "PingFang SC", "Microsoft YaHei", sans-serif;
	color: #1f2a37;
}

.detail-page {
	padding: 12px 12px 120px;
}

.hero-wrap {
	position: relative;
	background: #ffffff;
	border-radius: 18px;
	overflow: hidden;
	box-shadow: 0 14px 26px rgba(24, 44, 76, 0.1);
}

.hero-swiper {
	height: 240px;
}

.hero-image {
	width: 100%;
	height: 240px;
}

.hero-indicator {
	position: absolute;
	right: 12px;
	bottom: 12px;
	background: rgba(31, 42, 55, 0.7);
	color: #ffffff;
	font-size: 11px;
	padding: 4px 8px;
	border-radius: 10px;
}

.detail-card {
	background: #ffffff;
	border-radius: 16px;
	padding: 14px;
	margin-top: 12px;
	box-shadow: 0 12px 24px rgba(24, 44, 76, 0.08);
}

.price-card {
	display: flex;
	flex-direction: column;
	gap: 8px;
}

.price-row {
	display: flex;
	align-items: baseline;
	gap: 8px;
}

.price {
	font-size: 22px;
	font-weight: 700;
	color: #ff6a3d;
}

.origin {
	font-size: 12px;
	color: #9aa7b8;
	text-decoration: line-through;
}

.brand-tag {
	margin-left: auto;
	font-size: 11px;
	color: #ff6a3d;
	border: 1px solid #ff6a3d;
	padding: 2px 6px;
	border-radius: 10px;
}

.title {
	font-size: 16px;
	font-weight: 600;
	line-height: 1.4;
}

.sub-row {
	display: flex;
	justify-content: space-between;
	font-size: 12px;
	color: #6b7788;
}

.rating {
	display: flex;
	align-items: center;
	gap: 6px;
}

.divider {
	color: #d4d9e2;
}

.share-row {
	display: flex;
	gap: 14px;
	margin-top: 6px;
}

.share-item {
	display: flex;
	align-items: center;
	gap: 6px;
	font-size: 12px;
	color: #6b7788;
}

.share-icon {
	width: 16px;
	height: 16px;
	border-radius: 50%;
	border: 1px solid #cbd5e1;
}

.share-icon.active {
	background: #ff6a3d;
	border-color: #ff6a3d;
}

.cell {
	display: flex;
	align-items: center;
	gap: 8px;
}

.cell-title {
	font-size: 13px;
	color: #1f2a37;
	font-weight: 600;
}

.cell-desc {
	flex: 1;
	font-size: 12px;
	color: #6b7788;
}

.cell-arrow {
	font-size: 16px;
	color: #c1c7d3;
}

.service-tags {
	display: flex;
	gap: 8px;
	flex-wrap: wrap;
}

.service-tag {
	font-size: 11px;
	color: #5b6a7f;
	background: #f2f5fb;
	padding: 3px 8px;
	border-radius: 10px;
}

.section-title {
	font-size: 14px;
	font-weight: 600;
	margin-bottom: 10px;
}

.detail-image {
	width: 100%;
	border-radius: 12px;
	margin-bottom: 10px;
}

.detail-footer {
	position: fixed;
	left: 12px;
	right: 12px;
	bottom: 12px;
	display: flex;
	gap: 12px;
	align-items: center;
}

.footer-left {
	display: flex;
	gap: 12px;
}

.mini-action {
	width: 54px;
	height: 48px;
	background: #ffffff;
	border-radius: 14px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	font-size: 10px;
	color: #6b7788;
	box-shadow: 0 12px 24px rgba(24, 44, 76, 0.08);
}

.mini-icon {
	width: 18px;
	height: 18px;
	border-radius: 4px;
	background: #e8edf5;
	margin-bottom: 4px;
}

.mini-icon.service {
	background: #e7f1ff;
}

.mini-icon.cart {
	background: #fff1e8;
}

.footer-right {
	flex: 1;
	display: flex;
	gap: 8px;
}

.footer-btn {
	flex: 1;
	height: 44px;
	border-radius: 22px;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 13px;
	font-weight: 600;
}

.footer-btn.ghost {
	background: #fff5ef;
	color: #ff6a3d;
}

.footer-btn.primary {
	background: #ff6a3d;
	color: #ffffff;
}

.popup-mask {
	position: fixed;
	inset: 0;
	background: rgba(0, 0, 0, 0.35);
	z-index: 20;
}

.spec-popup,
.param-popup,
.share-popup {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: #ffffff;
	z-index: 30;
	border-radius: 18px 18px 0 0;
}

.spec-popup {
	padding: 16px;
}

.spec-header {
	display: flex;
	gap: 12px;
	align-items: flex-start;
}

.spec-image {
	width: 82px;
	height: 82px;
	border-radius: 12px;
}

.spec-info {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: 4px;
	font-size: 12px;
	color: #6b7788;
}

.spec-price {
	font-size: 18px;
	font-weight: 700;
	color: #ff6a3d;
}

.spec-close {
	font-size: 22px;
	color: #9aa7b8;
}

.spec-section {
	margin-top: 14px;
}

.spec-title {
	font-size: 13px;
	font-weight: 600;
	margin-bottom: 8px;
}

.spec-options {
	display: flex;
	flex-wrap: wrap;
	gap: 8px;
}

.spec-option {
	padding: 6px 10px;
	font-size: 11px;
	background: #f2f5fb;
	color: #5b6a7f;
	border-radius: 12px;
}

.spec-option.active {
	background: #ff6a3d;
	color: #ffffff;
}

.qty-stepper {
	display: flex;
	align-items: center;
	gap: 12px;
}

.step-btn {
	width: 28px;
	height: 28px;
	border-radius: 50%;
	background: #f2f5fb;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 600;
	color: #5b6a7f;
}

.qty-value {
	min-width: 24px;
	text-align: center;
}

.spec-footer {
	margin-top: 18px;
	display: flex;
	gap: 10px;
}

.param-popup {
	height: 70vh;
	display: flex;
	flex-direction: column;
}

.param-header {
	padding: 16px;
	display: flex;
	justify-content: space-between;
	font-size: 14px;
	font-weight: 600;
}

.param-close {
	font-size: 20px;
	color: #9aa7b8;
}

.param-list {
	flex: 1;
	padding: 0 16px 16px;
	overflow-y: scroll;
}

.param-row {
	display: flex;
	justify-content: space-between;
	padding: 10px 0;
	font-size: 12px;
	color: #6b7788;
	border-bottom: 1px solid #eef2f7;
}

.param-row:last-child {
	border-bottom: none;
}

.param-name {
	color: #8b99ab;
}

.param-value {
	color: #1f2a37;
}

.param-footer {
	margin: 12px 16px 16px;
	height: 40px;
	border-radius: 20px;
	background: #16c784;
	color: #ffffff;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 600;
}

.share-popup {
	padding: 16px 16px 12px;
}

.share-title {
	font-size: 13px;
	color: #6b7788;
	margin-bottom: 12px;
}

.share-options {
	display: flex;
	justify-content: space-around;
	margin-bottom: 12px;
}

.share-option {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 8px;
	font-size: 11px;
	color: #6b7788;
}

.share-circle {
	width: 44px;
	height: 44px;
	border-radius: 50%;
	background: #f2f5fb;
}

.share-circle.wechat {
	background: #52c41a;
}

.share-circle.moments {
	background: #69c0ff;
}

.share-circle.poster {
	background: #d9d9d9;
}

.share-cancel {
	height: 42px;
	border-radius: 20px;
	background: #f2f5fb;
	color: #6b7788;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 600;
}