/**index.wxss**/
page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f6f8fc 0%, #eef2f9 100%);
  font-family: "Noto Sans SC", "PingFang SC", "Microsoft YaHei", sans-serif;
  color: #1f2a37;
}

.page {
  position: relative;
  z-index: 1;
  padding: 0 16px 24px;
}

.hero-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 230px;
  z-index: 0;
}

.hero-image {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(10, 18, 34, 0.2) 0%, rgba(10, 18, 34, 0.55) 60%, rgba(246, 248, 252, 1) 100%);
}

.hero-section {
  padding-top: 12px;
}


.hero-swiper {
  margin-top: 12px;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 12px 26px rgba(24, 44, 76, 0.16);
}

.hero-swiper swiper {
  width: 100%;
  height: 160px;
}

.hero-swiper swiper {
  border-radius: 16px;
  overflow: hidden;
}

.hero-swiper swiper .hero-banner {
  border-radius: 16px;
  display: block;
}

.hero-banner {
  width: 100%;
  height: 160px;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 8px;
  height: 40px;
  background: #ffffff;
  border-radius: 20px;
  padding: 0 16px;
  box-shadow: 0 8px 20px rgba(24, 44, 76, 0.06);
}

.search-icon {
  width: 14px;
  height: 14px;
  border: 2px solid #9aa7b8;
  border-radius: 50%;
  position: relative;
}

.search-icon::after {
  content: "";
  position: absolute;
  width: 8px;
  height: 2px;
  background: #9aa7b8;
  right: -6px;
  bottom: -4px;
  transform: rotate(45deg);
  border-radius: 1px;
}

.search-placeholder {
  font-size: 14px;
  color: #9aa7b8;
}

.promo-card {
  margin-top: 16px;
  background: linear-gradient(135deg, #2c6cff 0%, #6aa2ff 100%);
  border-radius: 16px;
  padding: 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
  position: relative;
  overflow: hidden;
  box-shadow: 0 18px 28px rgba(36, 84, 180, 0.22);
  animation: liftIn 0.6s ease-out;
}

.promo-info {
  display: flex;
  flex-direction: column;
  gap: 8px;
  z-index: 1;
}

.promo-title {
  font-size: 18px;
  font-weight: 600;
}

.promo-sub {
  font-size: 13px;
  opacity: 0.9;
}

.promo-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 30px;
  padding: 0 14px;
  background: #ffffff;
  color: #2c6cff;
  border-radius: 15px;
  font-size: 12px;
  font-weight: 600;
}

.promo-art {
  width: 110px;
  height: 90px;
  background: radial-gradient(circle at 40% 40%, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0));
  border-radius: 24px;
  filter: blur(0.2px);
}

.quick-grid {
  margin-top: 16px;
  background: #ffffff;
  border-radius: 16px;
  padding: 16px 12px 10px;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12px 8px;
  box-shadow: 0 12px 24px rgba(24, 44, 76, 0.06);
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
}

.quick-icon {
  width: 42px;
  height: 42px;
  border-radius: 12px;
  background: #f2f5fb;
}

.quick-text {
  font-size: 11px;
  color: #2a3444;
  text-align: center;
}

.section {
  margin-top: 18px;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #1f2a37;
}

.section-more {
  font-size: 12px;
  color: #8b99ab;
}

.hot-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.hot-card {
  background: #ffffff;
  border-radius: 14px;
  padding: 10px;
  box-shadow: 0 10px 22px rgba(24, 44, 76, 0.08);
  display: flex;
  flex-direction: column;
  gap: 8px;
  animation: fadeUp 0.6s ease-out;
}

.hot-image {
  width: 100%;
  height: 110px;
  border-radius: 10px;
}

.hot-name {
  font-size: 13px;
  color: #1f2a37;
  line-height: 1.4;
  min-height: 34px;
}

.hot-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hot-price {
  color: #ff6a3d;
  font-weight: 600;
  font-size: 14px;
}

.hot-sold {
  font-size: 11px;
  color: #9aa7b8;
}

@keyframes liftIn {
  from {
    transform: translateY(10px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes fadeUp {
  from {
    transform: translateY(8px);
    opacity: 0.6;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.product-name {
  font-size: 14px;
  font-weight: 500;
  color: #333F48;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 12px;
  color: #8A99A8;
}

.product-price {
  display: flex;
  align-items: baseline;
  gap: 8px;
}

.product-price-current {
  font-size: 16px;
  font-weight: bold;
  color: #E63946;
}

.product-price-original {
  font-size: 12px;
  color: #8A99A8;
  text-decoration: line-through;
}

.product-add-cart {
  width: 100%;
  height: 36px;
  background-color: #2A5CAA;
  color: #FFFFFF;
  font-size: 14px;
  font-weight: 500;
  border-radius: 18px;
  border: none;
  margin-top: 8px;
}

.product-add-cart::after {
  border: none;
}

/* 底部功能区 */
.bottom-features {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #FFFFFF;
  padding: 16px;
  margin-bottom: 16px;
  border-radius: 8px;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.feature-icon {
  font-size: 24px;
}

.feature-text {
  font-size: 12px;
  color: #333F48;
}

