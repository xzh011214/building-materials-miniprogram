/**category.wxss**/
page {
  min-height: 100vh;
  background: #f6f8fc;
  font-family: "Noto Sans SC", "PingFang SC", "Microsoft YaHei", sans-serif;
  color: #1f2a37;
}

.category-page {
  padding: 12px 12px 20px;
}

.category-search {
  height: 38px;
  display: flex;
  align-items: center;
  gap: 8px;
  background: #ffffff;
  border-radius: 18px;
  padding: 0 14px;
  box-shadow: 0 8px 20px rgba(24, 44, 76, 0.06);
}

.search-icon {
  width: 12px;
  height: 12px;
  border: 2px solid #9aa7b8;
  border-radius: 50%;
  position: relative;
}

.search-icon::after {
  content: "";
  position: absolute;
  width: 7px;
  height: 2px;
  background: #9aa7b8;
  right: -5px;
  bottom: -4px;
  transform: rotate(45deg);
  border-radius: 1px;
}

.search-text {
  font-size: 13px;
  color: #9aa7b8;
}

.category-body {
  margin-top: 14px;
  background: #ffffff;
  border-radius: 16px;
  display: flex;
  min-height: 420px;
  overflow: hidden;
  box-shadow: 0 12px 26px rgba(24, 44, 76, 0.08);
}

.category-sidebar {
  width: 92px;
  background: #f2f5fb;
  padding: 8px 0;
}

.category-item {
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #6b7788;
  position: relative;
}

.category-item.active {
  color: #2c6cff;
  font-weight: 600;
  background: #ffffff;
}

.category-item.active::before {
  content: "";
  position: absolute;
  left: 0;
  width: 3px;
  height: 20px;
  background: #2c6cff;
  border-radius: 2px;
}

.category-content {
  flex: 1;
  padding: 14px;
}

.category-banner {
  position: relative;
  height: 110px;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 14px;
}

.category-banner image {
  width: 100%;
  height: 100%;
}

.banner-mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(20, 26, 36, 0) 0%, rgba(20, 26, 36, 0.45) 100%);
}

.banner-text {
  position: absolute;
  left: 12px;
  bottom: 10px;
  color: #ffffff;
  font-size: 14px;
  font-weight: 600;
}

.category-products {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

.product-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
  background: #f7f9fc;
  border-radius: 10px;
  padding: 8px 6px;
}

.product-card image {
  width: 100%;
  height: 68px;
  border-radius: 8px;
}

.product-card text {
  font-size: 11px;
  color: #2a3444;
}
