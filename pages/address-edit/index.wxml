<view class="page">
  <view class="card">
    <view class="row">
      <text class="label">收货人</text>
      <input class="input" data-field="name" bindinput="onInput" value="{{name}}" placeholder="请输入姓名" />
    </view>
    <view class="row">
      <text class="label">联系电话</text>
      <input class="input" data-field="phone" bindinput="onInput" value="{{phone}}" placeholder="请输入手机号" />
    </view>
    <view class="row">
      <picker
        class="picker"
        mode="multiSelector"
        range="{{[regionPicker.provinces, regionPicker.cities, regionPicker.areas]}}"
        value="{{regionPicker.value}}"
        bindchange="onRegionChange"
        bindcolumnchange="onRegionColumnChange"
      >
        <view class="row picker-row">
          <text class="label">所在地区</text>
          <view class="input {{region ? '' : 'placeholder'}}">
            {{region || '请选择地区'}}
          </view>
          <text class="chevron">></text>
        </view>
      </picker>
    </view>
    <view class="row">
      <text class="label">详细地址</text>
      <input class="input" data-field="detail" bindinput="onInput" value="{{detail}}" placeholder="请输入详细地址" />
    </view>
    <view class="row">
      <text class="label">设为默认</text>
      <switch class="switch" checked="{{isDefault}}" color="#0ab68a" bindchange="onSwitchChange" />
    </view>
  </view>

  <view class="card smart">
    <view class="row smart-row">
      <text class="label">智能识别</text>
      <view class="smart-actions">
        <view class="ghost" bindtap="handleClear">清空</view>
        <view class="primary" bindtap="handleSmartFill">识别</view>
      </view>
    </view>
    <textarea
      class="smart-input"
      placeholder="粘贴收货信息，如：张三 13800000000 北京市朝阳区 xxx路xx号"
      value="{{smartText}}"
      bindinput="onSmartInput"
    ></textarea>
  </view>

  <view class="footer">
    <view class="primary-btn" bindtap="handleSave">保存</view>
    <view class="danger-btn" bindtap="handleDelete">删除</view>
  </view>
</view>
