.page {
  min-height: 100vh;
  background: #f6f8fc;
  padding: 16px 16px 120px;
  color: #1f2a37;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 12px;
  padding: 6px 16px;
  box-shadow: 0 10px 20px rgba(24, 44, 76, 0.08);
  margin-bottom: 12px;
}

.label {
  font-size: 12px;
  color: #5f6b7a;
  min-width: 64px;
}

.input {
  flex: 1;
  font-size: 12px;
  color: #1f2a37;
}

.row {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 0;
  border-bottom: 1px solid #eef2f6;
}

.row:last-child {
  border-bottom: none;
}

.placeholder {
  color: #9aa7b8;
}

.chevron {
  color: #c1c7d0;
  font-size: 12px;
}

.picker {
  flex: 1;
}

.picker-row {
  padding: 0;
  border-bottom: none;
}

.switch {
  transform: scale(0.85);
  margin-left: auto;
}

.smart {
  padding: 6px 16px;
}

.smart-row {
  border-bottom: none;
}

.smart-actions {
  margin-left: auto;
  display: flex;
  gap: 8px;
}

.smart-input {
  width: 100%;
  min-height: 70px;
  font-size: 12px;
  color: #1f2a37;
  background: #f7f9fc;
  border-radius: 10px;
  padding: 8px 10px;
  box-sizing: border-box;
}

.ghost {
  font-size: 11px;
  color: #8b97a8;
  border: 1px solid #e3e8ef;
  padding: 4px 10px;
  border-radius: 10px;
}

.primary {
  font-size: 11px;
  color: #0ab68a;
  border: 1px solid #8fe2c9;
  padding: 4px 10px;
  border-radius: 10px;
}

.footer {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 24px;
}

.primary-btn {
  background: #0ab68a;
  color: #ffffff;
  text-align: center;
  border-radius: 20px;
  padding: 10px 0;
  font-size: 13px;
  box-shadow: 0 12px 20px rgba(6, 165, 126, 0.25);
}

.danger-btn {
  margin-top: 12px;
  background: #ffffff;
  color: #ff5d5d;
  text-align: center;
  border-radius: 20px;
  padding: 10px 0;
  font-size: 13px;
  border: 1px solid #ffb3b3;
}
