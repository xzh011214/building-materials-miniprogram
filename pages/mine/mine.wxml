    <image class="profile-avatar" src="{{userInfo.avatar}}" mode="aspectFill"></image>
    <view class="profile-main">
      <text class="profile-name">{{userInfo.name}}</text>
      <text class="profile-meta">ID {{userInfo.id}} · {{userInfo.level}}</text>
      <view class="profile-stats">
        <view class="stat-item">
          <text class="stat-num">2</text>
          <text class="stat-label">待付款</text>
        </view>
        <view class="stat-item">
          <text class="stat-num">5</text>
